@model PublishMessageViewModel

<div class="card grey lighten-5">
    <form asp-action="PublishMessage" asp-controller="MessageBoard" method="post">
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">mode_edit</i>
                <textarea asp-for="Content" id="message" class="materialize-textarea"></textarea>
                <label for="message">Write a message...</label>
                <div class="row"></div>
                <div id="actionsBar" style="display: none">
                    <input type="file" id="files" class="waves-effect waves-light btn-small teal lighten-2"><i class="material-icons left">attach_file</i></input>
                    <button type="submit" class="waves-effect waves-light btn-small right">Post</button>
                </div>
                <div class="row"></div>
                <div>
                    <img id="image" style="max-width: 200px" />
                </div>
            </div>
        </div>
    </form>
</div>

